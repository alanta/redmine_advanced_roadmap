<%= render :partial => 'versions/overview', :locals => {:version => version} %>
<%= render(:partial => "wiki/content", :locals => {:content => version.wiki_page.content}) if version.wiki_page %>

<%- if issues.present? -%>
<fieldset class="related-issues"><legend><%= l(:label_related_issues) %></legend>
<% form_tag({}) do %>
<table class="list related-issues">
  <thead>
    <th width="20%" align="left"><%= l(:field_issue) %></th>
    <th width="44%" align="left"><%= l(:field_description) %></th>
    <th width="9%" align="center"><%= l(:field_estimated_hours) %></th>
    <th width="9%" align="center"><%= l(:label_spent_time) %></th>
    <th width="9%" align="center"><%= l(:field_done_ratio) %></th>
    <th width="9%" align="center"><%= l(:label_roadmap_due_in, "") %></th>
  </thead>
  <tbody>
  <%- issues.each do |issue| -%>
    <%- color = ""
        begin_strike = ""
        end_strike = ""
        if issue.estimated_hours && issue.done_ratio
          color = color_by_ratio(issue.spent_hours / ((issue.estimated_hours * issue.done_ratio) / 100.0))
        end
        if issue.closed?
          begin_strike = "<strike>"
          end_strike = "</strike>"
        end -%>
    <tr class="hascontextmenu <%= cycle("odd", "even") %>\">
      <td class="checkbox"><%= check_box_tag("ids[]", issue.id) %></td>
      <td align="left"><%= "&nbsp;" * 3 * issue.parents_count %><%= link_to_issue(issue, :project => (@project != issue.project), :subject => false) %></td>
      <td align="left"><font color="<%= color %>"><%= begin_strike %><%= h(issue.subject) %><%= end_strike %></font></td>
      <td align="center"><font color="<%= color %>"><%= begin_strike %><%= ("%.2f" % issue.estimated_hours) if issue.estimated_hours %><%= end_strike %></font></td>
      <td align="center"><font color="<%= color %>"><%= begin_strike %><%= "%.2f" % issue.spent_hours %><%= end_strike %></font></td>
      <td align="center"><font color="<%= color %>"><%= begin_strike %><%= (("%.0f" % issue.done_ratio) + "%") if issue.estimated_hours %><%= end_strike %></font></td>
      <td align="center"><font color="<%= color %>"><%= begin_strike %><%= ("%.2f" % (issue.rest_hours * ((!issue.closed? and (!issue.spent_hours or issue.spent_hours <= 0.0) and !version.estimated_speed.nil?) ? version.estimated_speed : 1.0))) if issue.estimated_hours %><%= end_strike %></font></td>
    </tr>
  <%- end -%>
  </tbody>
  <thead>
    <th align="left"><b><%= l(:label_total) %></b></th>
    <th align="left">
    <%- if !version.estimated_speed.nil? -%>
      <b><%= l(:label_estimated_speed) %>: <font color="<%= color_by_ratio(version.estimated_speed) %>"><%= ("%.0f" % (100.0 / version.estimated_speed)) %>%</font></b>
    <%- end -%>
    </th>
    <th align="center"><b><%= ("%.2f" % version.estimated_hours) %></b></th>
    <th align="center"><b><%= ("%.2f" % version.spent_hours) %></b></th>
    <th align="center"><b><%= ("%.0f" % version.completed_pourcent) %>%</b></th>
    <th align="center"><b><%= ("%.2f" % version.rest_hours) %></b></th>
  </thead>
  <%- if !(custom_field = CustomField.find_by_id(Setting.plugin_advanced_roadmap["parallel_effort_custom_field"].to_i)).nil? and
         custom_field.field_format == "float" and
         !(custom_value = CustomValue.find(:first, :conditions => {:customized_type => "Version", :customized_id => version.id, :custom_field_id => custom_field.id})).nil? and
         custom_value.value.to_f != 1.0 -%>
  <thead>
    <th align="right" colspan="5"><b><%= l(:label_roadmap_due_in, "") %> (<%= custom_field.name %>):</b></th>
    <th align="center"><b><%= ("%.2f" % version.parallel_rest_hours) %></b></th>
  </thead>
  <%- end -%>
</table>
<% end %>
</fieldset>
<%- end -%>
